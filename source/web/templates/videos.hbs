	var enableTranslate = '{{enableTranslate}}';
	console.log('enableTranslate: ' + enableTranslate);
	$(function () {
		//			renderSelection();
		$("#erroredVideoTable").dataTable({
			"language": {
				"emptyTable": "No errored videos were found."

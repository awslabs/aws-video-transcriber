{{#if loading}}
	<div class="text-center"><img src="img/loading.gif" class="img-fluid"/></div>
{{else}}		
	<div class="jumbotron">
		<p class="lead"><a href="{{refreshLink}}"><i class="fas fa-sync-alt" title="Refresh videos"></i></a> The following videos have been added to the system. Click on a video to preview, edit, download captions and burn captions into video. You may also upload new MP4, MKV or MOV videos for processing. </p>
	</div>

	<div id="uploadContainer" class="m-4">
		<div id="actions" class="row">
		    <div class="col-lg-12">
		      <span class="btn btn-primary fileinput-button dz-clickable">
		          <i class="fa fa-cloud-upload-alt"></i>
		          <span>Upload videos...</span>
		      </span>
		    </div>
		</div>
		<div class="table table-striped files" id="previews">
		    <div id="template" class="file-row dz-image-preview">
		        <div>
		            <span class="preview"><img data-dz-thumbnail></span>
		        </div>
		        <div>
		            <p class="name" data-dz-name></p>
		            <strong class="error text-danger" data-dz-errormessage></strong>
		        </div>
		        <div>
		            <p class="size" data-dz-size></p>
		            <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
		                <div class="progress-bar progress-bar-success" style="width:0%;" data-dz-uploadprogress></div>
		            </div>
		        </div>
		        <div class="p-1">
		            <button class="btn btn-success start">
		                <i class="fa fa-cloud-upload-alt"></i>
		                <span>Start</span>
		            </button>
					<select id="languageSelection" class="form-select btn btn-success" aria-label="Default select example">
						<option selected value="{{defaultLanguage}}">{{defaultLanguage}}</option>						
						<option value="zh-CN">zh-CN</option>
						<option value="en-AU">en-AU</option>
						<option value="en-US">en-US</option>
						<option value="en-GB">en-GB</option>
						<option value="es-US">es-US</option>
						<option value="en-IN">en-IN</option>
						<option value="de-DE">de-DE</option>
						<option value="fr-CA">fr-CA</option>
						<option value="fr-FR">fr-FR</option>
						<option value="it-IT">it-IT</option>
						<option value="pt-BR">pt-BR</option>
						<option value="ta-IN">ta-IN</option>
						<option value="te-IN">te-IN</option>
						<option value="ja-JP">ja-JP</option>
						<option value="ko-KR">ko-KR</option>
					</select>							
		            <button data-dz-remove class="btn btn-default cancel">
		                <i class="fa fa-ban"></i>
		                <span>Cancel</span>
		            </button>
		            <button data-dz-remove class="btn btn-default delete">
		                <i class="fa fa-check-circle"></i>
		                <span>Upload complete</span>
		            </button>
		        </div>
		    </div>
		</div>
	</div>	

	<hr/>

	<ul class="nav nav-tabs" id="videoTabs" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" id="processing-tab" data-toggle="tab" href="#processing" role="tab" aria-controls="processing" aria-selected="true"><span class="badge badge-secondary">{{processingVideos.length}}</span> Processing</a>
		</li>	
		<li class="nav-item">
			<a class="nav-link" id="ready-tab" data-toggle="tab" href="#ready" role="tab" aria-controls="ready" aria-selected="false"><span class="badge badge-primary">{{readyVideos.length}}</span> Ready to edit</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="completed-tab" data-toggle="tab" href="#completed" role="tab" aria-controls="completed" aria-selected="false"><span class="badge badge-success">{{completedVideos.length}}</span> Completed</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" id="errored-tab" data-toggle="tab" href="#errored" role="tab" aria-controls="errored" aria-selected="false"><span class="badge badge-warning">{{erroredVideos.length}}</span> Errored</a>
		</li>			
	</ul>
	<div class="tab-content" id="videoTabsContent">
		<br/>

		<div class="tab-pane fade show active" id="processing" role="tabpanel" aria-labelledby="processing-tab">
			<div class="p-2">
				{{#if processingVideos.length}}
				<table class="table table-striped" id="processingVideoTable">
					<thead>
						<tr>
							<th scope="col">&nbsp;</th>
							<th scope="col">Processed</th>
							<th scope="col">Name</th>							
							<th scope="col">Description</th>
							<th scope="col">Status</th>
							<th scope="col">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
					{{#each processingVideos}}
					<tr>
						<td><a href="javascript: reprocessVideo('{{videoId}}');"><i class="fa fa-play" title="Reprocess video"></i></a></td>
						<td>{{formattedDate}}</td>
						<td class="wrappable">{{name}}</td>											
						<td class="wrappable">{{description}}</td>
						<td class="wrappable">{{statusText}}</td>
						<td><a href="javascript: deleteVideo('{{videoId}}');"><i class="fa fa-trash" title="Delete video"></i></a></td>
					</tr>
					{{/each}}
					</tbody>
				</table>
				{{else}}
					<div class="alert alert-secondary">
  						<a href="{{refreshLink}}"><i class="fas fa-sync-alt" title="Refresh videos"></i></a> No videos are currently being processed.
					</div>
				{{/if}}
			</div>
		</div>
		
		<div class="tab-pane fade" id="ready" role="tabpanel" aria-labelledby="ready-tab">
			<div class="p-2">
				{{#if readyVideos.length}}
				<table class="table table-striped" id="readyVideoTable">
					<thead>
						<tr>
							<th scope="col">&nbsp;</th>
							<th scope="col">Processed</th>
							<th scope="col">Name</th>
							<th scope="col">Video Language</th>	
							{{#if enableTranslate}}							
							<th scope="col">Translated Language</th>
							{{/if}}												
							<th scope="col">Description</th>
							<th scope="col">Status</th>
							<th scope="col">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
					{{#each readyVideos}}
					<tr>
						<td><a href="javascript: reprocessVideo('{{videoId}}');"><i class="fa fa-play" title="Reprocess video"></i></a></td>
						<td>{{formattedDate}}</td>		
						<td class="wrappable">{{name}}</td>
						<td class="wrappable"><a href="#video/{{videoId}}" onclick="dynamicRoute(event);">{{language}}</a></td>					

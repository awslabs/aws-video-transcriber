						{{/if}}						
						<td class="wrappable">{{description}}</td>						
						<td class="wrappable">{{statusText}}</td>
						<td><a href="javascript: deleteVideo('{{videoId}}');"><i class="fa fa-trash" title="Delete video"></i></a></td>
					</tr>
					{{/each}}
					</tbody>
				</table>
				{{else}}
					<div class="alert alert-secondary">
  						<a href="{{refreshLink}}"><i class="fas fa-sync-alt" title="Refresh videos"></i></a> No videos are currently currently ready for editing.
					</div>
				{{/if}}
			</div>
		</div>

		<div class="tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
			<div class="p-2">
				{{#if completedVideos.length}}
				<table class="table table-striped" id="completedVideoTable">
					<thead>
						<tr>
							<th scope="col">Processed</th>
							<th scope="col">Name</th>
							<th scope="col">Video Language</th>	
							{{#if enableTranslate}}
							<th scope="col">Translated Language</th>
							{{/if}}												
							<th scope="col">Description</th>
							<th scoqpe="col">Status</th>
							<th scope="col">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
					{{#each completedVideos}}
					<tr>
						<td>{{formattedDate}}</td>
						<td class="wrappable"><a href="#video/{{videoId}}" onclick="dynamicRoute(event);">{{name}}</a></td>
						<td>
							<div class="dropdown show">
								<a href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{language}}</a>
								<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
									<a class="dropdown-item" onclick="downloadCaptionsVTT('{{videoId}}', '{{name}}', '')">WEBVTT</a>
									<a class="dropdown-item" onclick="downloadCaptionsSRT('{{videoId}}', '{{name}}', '')">SRT</a>
									<a class="dropdown-item" onclick="downloadCaptionsTEXT('{{videoId}}', '{{name}}', '')">TEXT</a>
									{{#if s3BurnedVideoPath}}
										<a class="dropdown-item" onclick="downloadBurnedVideo('{{videoId}}', '{{name}}', '')">BurnedVideo</a>
									{{/if}}
								</div>
							</div>
						</td>
						{{#if enableTranslate}}						
						<td>
							<div class="dropdown show">
								<a href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{translatedLanguage}}</a>
								<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
									<a class="dropdown-item" onclick="downloadCaptionsVTT('{{videoId}}', '{{name}}', '{{translatedLanguage}}', 'true')">WEBVTT</a>
									<a class="dropdown-item" onclick="downloadCaptionsSRT('{{videoId}}', '{{name}}', '{{translatedLanguage}}', 'true')">SRT</a>
									<a class="dropdown-item" onclick="downloadCaptionsTEXT('{{videoId}}', '{{name}}', '{{translatedLanguage}}', 'true')">TEXT</a>			
									{{#if s3BurnedTranslatedVideoPath}}
										<a class="dropdown-item" onclick="downloadBurnedVideo('{{videoId}}', '{{name}}', '{{translatedLanguage}}')">BurnedVideo</a>
									{{/if}}	
								</div>
							</div>
						</td>
						{{/if}}						
						<td class="wrappable">{{description}}</td>
						<td class="wrappable">{{statusText}}</td>
						<td><a href="javascript: deleteVideo('{{videoId}}');"><i class="fa fa-trash" title="Delete video"></i></a></td>
					</tr>
					{{/each}}
					</tbody>
				</table>
				{{else}}
					<div class="alert alert-secondary">
  						<a href="{{refreshLink}}"><i class="fas fa-sync-alt" title="Refresh videos"></i></a> No completed videos found.
					</div>
				{{/if}}
			</div>
		</div>

		<div class="tab-pane fade" id="errored" role="tabpanel" aria-labelledby="errored-tab">
			<div class="p-2">
				{{#if erroredVideos.length}}
				<table class="table table-striped" id="erroredVideoTable">
					<thead>
						<tr>
							<th scope="col">&nbsp;</th>
							<th scope="col">Processed</th>
							<th scope="col">Name</th>							
							<th scope="col">Description</th>
							<th scope="col">Status</th>
							<th scope="col">&nbsp;</th>
						</tr>
					</thead>
					<tbody>
					{{#each erroredVideos}}
					<tr>
						<td><a href="javascript: reprocessVideo('{{videoId}}');"><i class="fa fa-play" title="Reprocess video"></i></a></td>
						<td>{{formattedDate}}</td>		
						<td class="wrappable"><a href="#video/{{videoId}}" onclick="dynamicRoute(event);">{{name}}</a></td>					
						<td class="wrappable">{{description}}</td>
						<td class="wrappable">{{statusText}}</td>
						<td><a href="javascript: deleteVideo('{{videoId}}');"><i class="fa fa-trash" title="Delete video"></i></a></td>
					</tr>
					{{/each}}
					</tbody>
				</table>
				{{else}}
					<div class="alert alert-secondary">
  						<a href="{{refreshLink}}"><i class="fas fa-sync-alt" title="Refresh videos"></i></a> No videos have failed processing.
					</div>
				{{/if}}
			</div>
		</div>		

	</div>


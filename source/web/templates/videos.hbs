				null,
				null,
				null,
				{ "orderable": false }
			]
		});

		$("#processingVideoTable").dataTable({
			"language": {
				"emptyTable": "No currently processing videos were found."
			},
			"order": [[1, "desc"]],
			"iDisplayLength": 10,
			"aLengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
			"columns": [
